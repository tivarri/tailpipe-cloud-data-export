{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Azure region for the deployment"
      }
    },
    "startDate": {
      "type": "string",
      "defaultValue": "2025-07-01",
      "metadata": {
        "description": "Start date for the export recurrence period in YYYY-MM-DD format."
      }
    }
  },
  "variables": {
    "resourceGroupName": "tailpipe-dataexport",
    "outerSubIdSuffix": "[substring(subscription().subscriptionId, sub(length(subscription().subscriptionId), 6), 6)]",
    "outerStorageAccountName": "[toLower(concat('tailpipedataexport', variables('outerSubIdSuffix')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[variables('resourceGroupName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "nestedRgDeployment",
      "resourceGroup": "[variables('resourceGroupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', variables('resourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "location": {
              "type": "string"
            }
          },
          "variables": {
            "subIdSuffix": "[substring(subscription().subscriptionId, sub(length(subscription().subscriptionId), 6), 6)]",
            "storageAccountName": "[toLower(concat('tailpipedataexport', variables('subIdSuffix')))]"
          },
          "resources": [
            {
              "type": "Microsoft.Storage/storageAccounts",
              "apiVersion": "2023-01-01",
              "name": "[variables('storageAccountName')]",
              "location": "[parameters('location')]",
              "sku": {
                "name": "Standard_LRS"
              },
              "kind": "StorageV2",
              "properties": {
                "accessTier": "Hot"
              }
            },
            {
              "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
              "apiVersion": "2023-01-01",
              "name": "[format('{0}/default/dataexport', variables('storageAccountName'))]",
              "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
              ],
              "properties": {}
            }
          ],
          "outputs": {
            "storageAccountName": {
              "type": "string",
              "value": "[variables('storageAccountName')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.CostManagement/exports",
      "apiVersion": "2025-03-01",
      "name": "Ta1lpipeDataExport",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'nestedRgDeployment')]"
      ],
      "location": "[parameters('location')]",
      "properties": {
        "definition": {
          "type": "Usage",
          "timeframe": "MonthToDate",
          "dataset": {
            "granularity": "Daily",
            "configuration": {
              "columns": []
            }
          }
        },
        "format": "Csv",
        "compressionMode": "Gzip",
        "dataOverwriteBehavior": "OverwritePreviousReport",
        "schedule": {
          "status": "Active",
          "recurrence": "Daily",
          "recurrencePeriod": {
            "from": "[parameters('startDate')]",
            "to": "2099-12-31"
          }
        },
        "deliveryInfo": {
          "destination": {
                        "resourceId": "[resourceId(subscription().subscriptionId, variables('resourceGroupName'), 'Microsoft.Storage/storageAccounts', variables('outerStorageAccountName'))]",
            "container": "dataexport",
            "rootFolderPath": "tailpipe"
          }
        }
      }
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[variables('resourceGroupName')]"
    }
  }
}
